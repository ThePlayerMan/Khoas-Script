-- Load UI Library (Using Rayfield UI from Sirius)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create Window
local Window = Rayfield:CreateWindow({
    Name = "Khoas",
    LoadingTitle = "Loading Khoas Hub...",
    LoadingSubtitle = "Please wait",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "KhoasHub",
        FileName = "Config"
    }
})

-- Auto-select Pirate Team on Join
task.spawn(function()
    repeat wait() until game.Players.LocalPlayer
    local args = {
        [1] = "Team",
        [2] = "Pirates"
    }
    game.ReplicatedStorage.Remotes.CommF_:InvokeServer(unpack(args))
end)

-- Create Main Tab
local MainTab = Window:CreateTab("Khoas Hub")

-- Auto-Aim Settings
local aimEnabled = false
local aimRadius = 100
local aimSpeed = 5
local aimSmoothness = 0.1
local silentAim = false

-- ESP Settings
local espEnabled = false
local espShowHealth = true
local espShowDistance = true
local espShowNames = true

-- Auto Farm Toggle
local autoFarmEnabled = false

-- Add Features to Main Tab
MainTab:CreateToggle({
    Name = "Enable Aimbot",
    Default = false,
    Callback = function(value)
        aimEnabled = value
    end
})

MainTab:CreateSlider({
    Name = "Aim Radius",
    Min = 50,
    Max = 500,
    Default = 100,
    Callback = function(value)
        aimRadius = value
    end
})

MainTab:CreateSlider({
    Name = "Aim Speed",
    Min = 1,
    Max = 10,
    Default = 5,
    Callback = function(value)
        aimSpeed = value
    end
})

MainTab:CreateToggle({
    Name = "Enable Silent Aim",
    Default = false,
    Callback = function(value)
        silentAim = value
    end
})

MainTab:CreateToggle({
    Name = "Enable ESP",
    Default = false,
    Callback = function(value)
        espEnabled = value
    end
})

MainTab:CreateToggle({
    Name = "Show Player Names",
    Default = true,
    Callback = function(value)
        espShowNames = value
    end
})

MainTab:CreateToggle({
    Name = "Show Health",
    Default = true,
    Callback = function(value)
        espShowHealth = value
    end
})

MainTab:CreateToggle({
    Name = "Show Distance",
    Default = true,
    Callback = function(value)
        espShowDistance = value
    end
})

MainTab:CreateButton({
    Name = "Enable Super Jump",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = 150
    end
})

MainTab:CreateButton({
    Name = "Infinite Energy",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.MaxStamina = math.huge
    end
})

MainTab:CreateButton({
    Name = "Fly Hack",
    Callback = function()
        local humanoid = game.Players.LocalPlayer.Character.HumanoidRootPart
        while task.wait() do
            humanoid.Velocity = Vector3.new(0, 50, 0)
        end
    end
})

MainTab:CreateButton({
    Name = "Speed Hack",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 200
    end
})

MainTab:CreateToggle({
    Name = "Auto Farm Fruits",
    Default = false,
    Callback = function(value)
        autoFarmEnabled = value
    end
})

MainTab:CreateToggle({
    Name = "Auto Attack NPCs",
    Default = false,
    Callback = function(value)
        while value do
            game.ReplicatedStorage.Remotes.Combat:FireServer("Melee")
            wait(0.5)
        end
    end
})

MainTab:CreateToggle({
    Name = "Auto Collect Drops",
    Default = false,
    Callback = function(value)
        while value do
            for _, item in ipairs(game.Workspace:GetChildren()) do
                if item:IsA("Tool") then
                    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = item.CFrame
                    wait(1)
                end
            end
        end
    end
})

print("Khoas Hub Loaded - Press Right Ctrl to Open/Close UI")

    end
})

print("Khoas Hub Loaded - Press Right Ctrl to Open/Close UI")

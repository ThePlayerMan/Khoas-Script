-- Load UI Library (Using Rayfield UI from Sirius)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create Window
local Window = Rayfield:CreateWindow({
    Name = "Khoas",
    LoadingTitle = "Loading Khoas Hub...",
    LoadingSubtitle = "Please wait",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "KhoasHub",
        FileName = "Config"
    }
})

-- Auto-select Pirate Team on Join
task.spawn(function()
    repeat wait() until game.Players.LocalPlayer
    local args = {
        [1] = "Team",
        [2] = "Pirates"
    }
    game.ReplicatedStorage.Remotes.CommF_:InvokeServer(unpack(args))
end)

-- Create Tabs
local AimTab = Window:CreateTab("Aimbot")
local ESPTab = Window:CreateTab("ESP")
local PlayerEditorTab = Window:CreateTab("Player Editor")
local MiscTab = Window:CreateTab("Miscellaneous")
local ExploitsTab = Window:CreateTab("Exploits")
local AutoFarmTab = Window:CreateTab("AutoFarm")

-- Auto-Aim Settings
local aimEnabled = Window:CreateConfig("AimEnabled", false)
local aimRadius = Window:CreateConfig("AimRadius", 100)
local aimSpeed = Window:CreateConfig("AimSpeed", 5)
local aimSmoothness = Window:CreateConfig("AimSmoothness", 0.1)
local silentAim = Window:CreateConfig("SilentAim", false)

-- ESP Settings
local espEnabled = Window:CreateConfig("ESPEnabled", false)
local espShowHealth = Window:CreateConfig("ESPShowHealth", true)
local espShowDistance = Window:CreateConfig("ESPShowDistance", true)
local espShowNames = Window:CreateConfig("ESPShowNames", true)

-- Auto Farm Toggle
local autoFarmEnabled = Window:CreateConfig("AutoFarmEnabled", false)

-- Toggle Auto-Aim
AimTab:CreateToggle({
    Name = "Enable Aimbot",
    Default = aimEnabled,
    Callback = function(value)
        aimEnabled = value
        Window:SaveConfig()
    end
})

AimTab:CreateSlider({
    Name = "Aim Radius",
    Min = 50,
    Max = 500,
    Default = aimRadius,
    Callback = function(value)
        aimRadius = value
        Window:SaveConfig()
    end
})

AimTab:CreateSlider({
    Name = "Aim Speed",
    Min = 1,
    Max = 10,
    Default = aimSpeed,
    Callback = function(value)
        aimSpeed = value
        Window:SaveConfig()
    end
})

-- Toggle ESP
ESPTab:CreateToggle({
    Name = "Enable ESP",
    Default = espEnabled,
    Callback = function(value)
        espEnabled = value
        Window:SaveConfig()
    end
})

ESPTab:CreateToggle({
    Name = "Show Player Names",
    Default = espShowNames,
    Callback = function(value)
        espShowNames = value
        Window:SaveConfig()
    end
})

-- Miscellaneous Features
MiscTab:CreateButton({
    Name = "Enable Super Jump",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = 150
    end
})

MiscTab:CreateButton({
    Name = "Infinite Energy",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.MaxStamina = math.huge
    end
})

-- Exploits Features
ExploitsTab:CreateButton({
    Name = "Fly Hack",
    Callback = function()
        local humanoid = game.Players.LocalPlayer.Character.HumanoidRootPart
        while task.wait() do
            humanoid.Velocity = Vector3.new(0, 50, 0)
        end
    end
})

ExploitsTab:CreateButton({
    Name = "Speed Hack",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 200
    end
})

print("Khoas Hub Loaded - Press Right Ctrl to Open/Close UI")

